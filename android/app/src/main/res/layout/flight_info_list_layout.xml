<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/flight_card_flight_table_title"
        layout="@layout/flight_card_recycler_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <!-- Separation line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/flight_card_flight_table_title"
        android:background="@color/black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/flight_card_flight_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_card_flight_table_title"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <TextView
        android:id="@+id/flight_info_timestamp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/flight_card_flight_table"
        android:text="Medium Text" />
</RelativeLayout>
