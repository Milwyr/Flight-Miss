<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/chatBotBackground">

    <!-- This layout is to ensure padding can be used in the next relative layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- This layout is to ensure different colour can be applied -->
        <RelativeLayout
            android:id="@+id/card_view_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:background="@color/themeColour"
            android:paddingBottom="@dimen/vertical_padding_narrow"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/vertical_padding_narrow">

            <TextView
                android:id="@+id/card_view_message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Medium Text"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/card_view_timestamp_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_message_text_view"
                android:layout_toEndOf="@id/card_view_message_text_view"
                android:text="Small Text"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>