<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/flight_card_recycler_view_column_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Medium Text"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/flight_card_recycler_view_column_flight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Medium Text"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/flight_card_recycler_view_column_departure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Medium Text"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/flight_card_recycler_view_column_arrival"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Medium Text"
        android:textColor="@color/black" />

</LinearLayout>
